{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "out",
		"lib": ["esnext", "DOM"],
		"rootDir": "src",
		"sourceMap": true,

		"strict": true,
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	}
}
